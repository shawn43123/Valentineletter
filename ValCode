<script>
    const music = document.getElementById("bgMusic");

    document.body.addEventListener("click", () => {
        music.play();
    }, { once: true });

    function yesClicked() {
        document.querySelector('.card').innerHTML =
        "<h1>ğŸ¥° Yay, Maricris! ğŸ’š</h1><p>You just made my heart so happy ğŸ’<br>Happy Valentineâ€™s Day!</p>";
